      	</div>
      <!-- ends slide show -->

    </div>

    <div class="column" data-aos="zoom-in-right" data-aos-delay="250">
      <h2 class="item_title"><%= item.itemname %> </h2>
      <p style="color:white">Promotion status: <%= item.isPromoted ? "Promoted" : "Not Promoted" %></p>

      <table>
        <tr>
          <td><h2 id="InitialPrice">AU$ <%= calculateInitialPrice(item.price) %></h2></td>
          <td><h2 id="realprice">AU$ <%= item.price %></h2></td>
        </tr>
      </table>

      <a id="more-btn" href="tel: <%= user.phonecall %>" class="btn btn-warning">call me</a>
      <a id="more-btn" href="https://api.whatsapp.com/send?phone=<%= user.whatsapp %>" class="btn btn-warning">start chat</a><br>

      <div class="description">
        <h2>Product Description</h2>
        <p><%= item.description %></p>
      </div>

        <a id="more-btn" href="/edit-item/<%= item._id %>" class="btn btn-warning">Edit</a>
        <a id="more-btn" href="/delete-item/<%= item._id %>" class="btn btn-warning">Delete</a><br>

        <% if (!item.isPromoted) { %>

          <a id="more-btn" href="/promote/<%= item._id %>" class="btn btn-warning">Promote This Item</a><br>

        <% } else { %>

          <a id="more-btn" href="/remove-promotion/<%= item._id %>" class="btn btn-warning">Remove Promotion</a><br>

        <% } %>

    <div class="btn_wrap">
        <span class="sharename">Share</span>
        <div class="btn-container">
            <a class="facebook" target="blank"><i id="share_icon" class="fab fa-facebook-f"></i></a>
            <a class="telegram" target="blank"><i id="share_icon" class="fab fa-telegram"></i></a>
            <a class="instagram" target="blank"><i id="share_icon" class="fab fa-instagram"></i></a>
            <a class="whatsapp" target="blank"><i id="share_icon" class="fab fa-whatsapp"></i></a>
        </div>
    </div>

    </div>
  </div>
</div>

