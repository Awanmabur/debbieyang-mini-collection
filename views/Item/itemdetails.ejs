              <a href="https://api.whatsapp.com/send?phone=256781977217" style="margin-left: 10px; "class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i class="fab fa-whatsapp" ></i> </a>
      			</div>
      			<img id="slide" src=".././images/app.jpg" width="100%" height="auto">
      		</div>

      		<div class="myslideit fade">
      			<div class="txt">
              <h1>April</h1>
      				<p>This is the best photo of<br> April 2022</p>
              <a href="tel: +211928901760" class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i id="call-logo"class="fa fa-phone" aria-hidden="true"></i> </a>
              <a href="https://api.whatsapp.com/send?phone=256781977217" style="margin-left: 10px; "class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i class="fab fa-whatsapp" ></i> </a>
      			</div>
      			<img id="slide" src=".././images/s3.jpg" width="100%" height="auto">
      		</div>

      		<div class="myslideit fade">
      			<div class="txt">
              <h1>June</h1>
      				<p>This is the best photo of<br> June 2022</p>
              <a href="tel: +211928901760" class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i id="call-logo"class="fa fa-phone" aria-hidden="true"></i> </a>
              <a href="https://api.whatsapp.com/send?phone=256781977217" style="margin-left: 10px; "class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i class="fab fa-whatsapp" ></i> </a>
      			</div>
      			<img id="slide" src=".././images/s4.jpg" width="100%" height="auto">
      		</div>

      		<div class="myslideit fade">
      			<div class="txt">
              <h1>March</h1>
      				<p>This is the best photo of<br> March 2022</p>
              <a href="tel: +211928901760" class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i id="call-logo"class="fa fa-phone" aria-hidden="true"></i> </a>
              <a href="https://api.whatsapp.com/send?phone=256781977217" style="margin-left: 10px; "class="btn btn-outline-info btn-blue btn-lg px-3 me-md-2"><i class="fab fa-whatsapp" ></i> </a>
      			</div>
      			<img id="slide" src=".././images/s5.jpg" width="100%" height="auto">
      		</div>
      		<!-- /fade css -->

      		<!-- onclick js -->
      		<a class="prev" onclick="plusSlidesit(-1)">&#10094;</a>
          <a class="next" onclick="plusSlidesit(1)">&#10095;</a>

      		<div class="dotsboxit" style="text-align:center">
      			<table>
      				<tr>
      					<td><img class="dotit" onclick="currentSlideit(1)" src="/uploads/<%= item.image %>" alt="item Image" width="100%" height="auto" alt=""></td>
      					<td><img class="dotit" onclick="currentSlideit(2)" src=".././images/app.jpg"></td>
      					<td><img class="dotit" onclick="currentSlideit(3)" src=".././images/s3.jpg"></td>
