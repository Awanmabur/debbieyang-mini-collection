<%-include("../partials/header") %>

<%-include("../partials/dropdown") %>

<%-include("../partials/flash") %>

<div id="contact" class="container">

  <h2 class="create">Edit This Product</h2>

  <div class="row">
    <form action="/edit-item/<%= item._id %>" method="POST" enctype="multipart/form-data">
    <div class="column" data-aos="zoom-in-left" data-aos-delay="180">

      <label class="contact1" for="image">Image 1</label>
      <input class="contact2" type="file" value="<%= item.image1 %>" name="image1">
      <label class="contact1" for="image">Image 2</label>
      <input class="contact2" type="file" value="<%= item.image2 %>" name="image2">
      <label class="contact1" for="image">Image 3</label>
      <input class="contact2" type="file" value="<%= item.image3 %>" name="image3">
      <label class="contact1" for="image">Image 4</label>
      <input class="contact2" type="file" value="<%= item.image4 %>" name="image4">
      <label class="contact1" for="image">Image 5</label>
      <input class="contact2" type="file" value="<%= item.image5 %>" name="image5">


      <!-- <img id="serv2" src="/uploads/<%= item.image1 %>" alt="Image Preview" width="49%">
      <img id="serv2" src="/uploads/<%= item.image2 %>" alt="Image Preview" width="49%">
      <img id="serv2" src="/uploads/<%= item.image3 %>" alt="Image Preview" width="49%">
      <img id="serv2" src="/uploads/<%= item.image4 %>" alt="Image Preview" width="49%">
      <img id="serv2" src="/uploads/<%= item.image4 %>" alt="Image Preview" width="49%"> -->

    </div>

    <div class="column" data-aos="zoom-in-right" data-aos-delay="250">
        <label class="contact1">Product Name</label>
        <input class="contact2" type="text" value="<%= item.itemname %>" name="itemname">
        <label class="contact1">Product Price</label>
        <input class="contact2" type="number" value="<%= item.price %>" name="price" min="5">
        <label class="contact1">Category</label>
        <select class="contact2" name="category">
          <option value="<%= item.category %>"><%= item.category %></option>
          <option value="women wear">women wear</option>
          <option value="children wear">children wear</option>
          <option value="ladies wear">ladies wear</option>
          <option value="men wear">men wear</option>
          <option value="ladies shoes">ladies shoes</option>
          <option value="men shoes">men shoes</option>
          <option value="decoration crochet">decoration crochet</option>
          <option value="bedsheets">bedsheets</option>
          <option value="pillow cases">pillow cases</option>
          <option value="blowdry">blowdry</option>
          <option value="african wear">african wear</option>
          <option value="Religion">Religion</option>
          <option value="Transport">Transport</option>
          <option value="Business">Business</option>
          <option value="Culture">Culture</option>
          <option value="Communication">Communication</option>
          <option value="Communication">Entertainment</option>
        </select>
        <label class="contact1" for="subject">Description</label>
        <textarea id="content" name="description" style="height:170px"> <%= item.description %> </textarea>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>
</div>

<%-include("../partials/footer") %>

<!-- editing page end here -->
